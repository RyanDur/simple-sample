{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": false,
    "declaration": true,
    "sourceMap": true,
    "lib": [
      "es2019",
      "dom"
    ],
    "typeRoots": [
      "./typings",
      "./node_modules/@types/"
    ]
  },
  "exclude": [
    "node_modules",
    "**/__tests__/**/*"
  ]
}
