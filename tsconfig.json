{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "outDir": "public",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "typeRoots" : ["./typings", "./node_modules/@types/"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/__tests__/**/*"
  ],
  "lib": ["es2017", "dom", "es5"]
}
